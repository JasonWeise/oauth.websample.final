{
  "name": "finalspa",
  "version": "3.0.0",
  "description": "The main SPA, which calls OAuth 2.0 secured APIs with the latest HTTP-only SameSite cookies",
  "main": "index.tsx",
  "keywords": [],
  "author": "Gary Archer",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "npx eslint . --ext .ts,.tsx",
    "start": "npm run webpackDebug",
    "build": "./build.sh",
    "buildRelease": "./build.sh RELEASE",
    "webpackDebug": "NODE_OPTIONS='--import tsx' webpack --config webpack/webpack.config.dev.ts --watch",
    "webpackRelease": "NODE_OPTIONS='--import tsx' webpack --config webpack/webpack.config.prod.ts",
    "purgecss": "purgecss -c purgecss.config.cjs -o dist"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "guid-typescript": "^1.0.9",
    "js-event-bus": "^1.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.16.1",
    "react-router-dom": "^6.9.0",
    "url-parse": "^1.5.10"
  },
  "devDependencies": {
    "@types/node": "^18.16.19",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/react-modal": "^3.13.1",
    "@types/url-parse": "^1.4.11",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-plugin-react": "^7.32.2",
    "purgecss": "^5.0.0",
    "ts-loader": "^9.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0"
  }
}
